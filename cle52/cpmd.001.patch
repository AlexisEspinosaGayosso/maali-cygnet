##############################################################################
# ibs config file for cpmd
##############################################################################

# specify which compilers we want to build the tool with
IBS_TOOL_COMPILERS="PrgEnv-intel/5.2.25"

# URL to download the source code from
IBS_URL=" "

# consistant naming schemes are a myth
IBS_CPMD_VERSION=`echo $IBS_TOOL_VERSION | sed -e 's/\./_/g'`;

# location we are downloading the source code to
IBS_DST="$IBS_SRC/$IBS_TOOL_NAME-v$IBS_CPMD_VERSION.tar"

# where the unpacked source code is located
IBS_TOOL_BUILD_DIR="$IBS_BUILD_DIR/CPMD"

# type of tool (eg. apps, devel, python, etc.)
IBS_TOOL_TYPE="apps"

# tool pre-requisites
IBS_TOOL_PREREQ="$IBS_DEFAULT_MPI"

# for auto-building module files
IBS_MODULE_SET_PATH=1

##############################################################################
function ibs_build {

  cd "$IBS_TOOL_BUILD_DIR"
  ibs_run "pwd"

  ibs_run "cp $IBS_FILES_PATH/cpmd-CRAY-XC-INTEL-MPI CONFIGURE/CRAY-XC-INTEL-MPI"
 
  ibs_run "./mkconfig.sh CRAY-XC-INTEL-MPI > Makefile"

  ibs_run "make -j20"

  ibs_run "mkdir -p $IBS_INSTALL_DIR"
  ibs_run "chmod 750 $IBS_INSTALL_DIR"
  ibs_run "chgrp cpmd $IBS_INSTALL_DIR"

  ibs_run "mkdir -p $IBS_INSTALL_DIR/bin"
  ibs_run "chmod 750 $IBS_INSTALL_DIR/bin"
  ibs_run "chgrp cpmd $IBS_INSTALL_DIR/bin"

  ibs_run "mv cpmd.x $IBS_INSTALL_DIR/bin"
  ibs_run "chmod 750 $IBS_INSTALL_DIR/bin/cpmd.x"
  ibs_run "chgrp cpmd $IBS_INSTALL_DIR/bin/cpmd.x"
}
             

